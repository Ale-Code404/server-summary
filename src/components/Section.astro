---
interface Props {
  class?: string;
  title: string;
  description: string;
}

const { class: className, title, description } = Astro.props;
---

<section class:list={["flex flex-col gap-4 pb-24", className]}>
  <header>
    <h2 class="text-xl font-bold">{title}</h2>
    <p class="text-muted">{description}</p>
  </header>

  <!-- Section content -->
  <div>
    <slot />
  </div>
</section>
