---
export interface Props {
  title: string;
  description: string;
  icon: string;
  tags: string[];
  url: string;
}

import { Icon } from "astro-icon/components";
import Badge from "./Badge.astro";
import Button from "./Button.astro";

const { title, description, icon, tags, url } = Astro.props;
---

<article class="flex flex-col gap-4 rounded-lg border border-primary p-4">
  <header class="flex items-center gap-4">
    <div
      class="bg-muted rounded-md flex items-center justify-center aspect-square w-10 md:w-12"
    >
      <Icon class="text-white" name={icon} size={32} />
    </div>
    <div>
      <h3>{title}</h3>
      <p class="text-muted">{description}</p>
    </div>
  </header>

  <div class="flex flex-col gap-4">
    <div class="flex justify-between">
      <div class="flex gap-4">
        {tags.map((tag) => <Badge>{tag}</Badge>)}
      </div>
    </div>

    <Button
      href={url}
      class="bg-secondary text-white hover:bg-primary hover:text-black"
      >Go to application</Button
    >
  </div>
</article>
